<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h4></h4>
    <%= f.submit 'Update Book' %>
    <h4></h4>
    <%= link_to "show", book_path(@book) %>
    |
    <%= link_to "Back", "/books" %>
<% end %>
